task default: :deploy

task :optipng do
	system 'find source/images -name "*.png" -print0 | xargs -0 optipng -o7 -zm1-9 -f5 -strip all'
end

task :build do
	system 'bundle exec middleman build'
end

task deploy: :build do
	system 'rsync -axPv --delete --chown www:www build/ s1.exodus-privacy.eu.org:/usr/local/www/exodus-privacy/'
end
